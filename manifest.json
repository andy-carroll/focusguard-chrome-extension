{
  "manifest_version": 3,
  "name": "FocusGuard",
  "version": "0.1.0",
  "description": "Block distracting websites with meaningful friction to stay focused",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusGuard"
  },
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
